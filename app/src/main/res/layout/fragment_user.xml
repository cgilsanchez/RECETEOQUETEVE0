<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <!-- Imagen de perfil predeterminada -->
    <ImageView
        android:id="@+id/iv_user_profile"
        android:layout_width="94dp"
        android:layout_height="99dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/user_profile_image_description"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_default_profile" />

    <!-- Mostrar Nombre del Usuario -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_label_name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_name_placeholder"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Mostrar Correo del Usuario -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_label_email"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tv_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_email_placeholder"
            android:textSize="16sp" />
    </LinearLayout>

    <!-- Botón de Cerrar Sesión -->
    <Button
        android:id="@+id/btn_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_logout_button"
        android:backgroundTint="@color/orange_light"
        android:textColor="@android:color/white"
        android:padding="12dp" />
</LinearLayout>
